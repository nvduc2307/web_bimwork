<%- include('../includes/header')%>
<div class="container">
    <h1 class="mt-4">Trash</h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">photo</th>
            <th scope="col">full name</th>
            <th scope="col">user name</th>
            <th scope="col">email</th>
            <th scope="col">gender</th>
            <th scope="col" colspan="2">address</th>
          </tr>
        </thead>
        <tbody>
            <%if(users.length>0){%>
                <%users.forEach(user => {%>
                    <tr>
                      <td>
                        <img width="30" height="30" src="<%= user.photo%>" alt="<%= user.username%>">
                      </td>
                      <td><%= user.fullname%></td>
                      <td><%= user.username%></td>
                      <td><%= user.email%></td>
                      <td><%= user.gender%></td>
                      <td><%= user.address%></td>
                      <td>
                        <a href="" data-id="<%= user._id%>" class="btn btn-primary btn-user-restore">restore</a>
                        <a href="" class="btn btn-danger btn-user-delete" data-bs-id="<%= user._id%>" data-bs-toggle="modal" data-bs-target="#modelDelete">destroy</a>
                    </td>
                    </tr>
                <%})%>
            <%}else{%>
                <tr class="text-center">
                    <td colspan="6"> is empty! <a href="/admin">go to users manage</a></td>
                </tr>
            <%}%>
        </tbody>
      </table>
</div>
  <!-- Modal -->
  <div class="modal fade" id="modelDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">are you sure Delete?</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            can not restore.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger btn-modal-user-destroy">Delete</button>
        </div>
      </div>
    </div>
  </div>
<form id="form-users-trash-submit" name="form-users-trash-submit" method="post"></form>
<script src="/js/form-submit-trash.js"></script>
<%- include('../includes/footer')%>